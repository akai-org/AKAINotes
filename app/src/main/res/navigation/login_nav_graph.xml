<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav_graph.xml"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="pl.kossa.akainotes.fragments.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/goToMainActivity"
            app:destination="@id/mainActivity" />

        <action
            android:id="@+id/goToChangePassword"
            app:destination="@id/changePasswordFragment" />

        <action
            android:id="@+id/goToRegisterFragment"
            app:destination="@id/registerFragment" />

    </fragment>

    <activity
        android:id="@+id/mainActivity"
        android:name="pl.kossa.akainotes.activities.MainActivity"
        android:label="MainActivity"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="pl.kossa.akainotes.fragments.ChangePasswordFragment"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="pl.kossa.akainotes.fragments.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register"/>
</navigation>