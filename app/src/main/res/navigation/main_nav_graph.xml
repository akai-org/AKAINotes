<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/notesFragment">

    <fragment
        android:id="@+id/notesFragment"
        android:name="pl.kossa.akainotes.fragments.notes.NotesFragment"
        android:label="NotesFragment"
        tools:layout="@layout/fragment_notes">

        <action
            android:id="@+id/goToAddNote"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/action_notesFragment_to_userInformationFragment"
            app:destination="@id/userInformationFragment" />

    </fragment>

    <fragment
        android:id="@+id/addNoteFragment"
        android:name="pl.kossa.akainotes.fragments.addNote.AddNoteFragment"
        android:label="Add Notes"
        tools:layout="@layout/fragment_add_note"/>
    <fragment
        android:id="@+id/userInformationFragment"
        android:name="pl.kossa.akainotes.fragments.userInformation.UserInformationFragment"
        android:label="fragment_user_information"
        tools:layout="@layout/fragment_user_information" >
        <action
            android:id="@+id/action_userInformationFragment_to_notesFragment"
            app:destination="@id/notesFragment" />
    </fragment>
</navigation>