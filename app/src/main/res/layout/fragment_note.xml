<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D8D8D8">

    <LinearLayout
        android:id="@+id/actionBarNV"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/purple_500"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        app:layout_constraintVertical_chainStyle="packed">
    </LinearLayout>

    <ImageView
        android:id="@+id/backArrowViewNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="@string/click_to_go_back"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toBottomOf="@id/actionBarNV"
        app:layout_constraintStart_toStartOf="@id/actionBarNV"
        app:layout_constraintTop_toTopOf="@id/actionBarNV" />

    <TextView
        android:id="@+id/noteTitleNoteView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/actionBarNV"
        app:layout_constraintEnd_toEndOf="@id/actionBarNV"
        app:layout_constraintStart_toStartOf="@id/actionBarNV"
        app:layout_constraintTop_toTopOf="@id/actionBarNV" />

    <TextView
        android:id="@+id/noteContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/actionBarNV"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="#D8D8D8"/>



</androidx.constraintlayout.widget.ConstraintLayout>